<Page x:Class="CDKeyMiner.Download"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CDKeyMiner"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Download" Loaded="Page_Loaded" Opacity="0">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Downloading Phoenix Miner..." Foreground="{StaticResource MinerGreen}"/>
            <ProgressBar x:Name="DownloadProgress" Foreground="{StaticResource MinerGreen}" />
        </StackPanel>
    </Grid>
</Page>
