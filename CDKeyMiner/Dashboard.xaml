<Page x:Class="CDKeyMiner.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CDKeyMiner"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Dashboard" Loaded="Page_Loaded">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Name="buttonLbl" Foreground="{StaticResource MinerGreen}" HorizontalAlignment="Center" FontSize="72" PreviewMouseDown="Label_PreviewMouseDown" MouseEnter="buttonLbl_MouseEnter" MouseLeave="buttonLbl_MouseLeave">▶</Label>
        <Label Name="statusLbl" Foreground="{StaticResource MinerGreen}" HorizontalAlignment="Center">Click the button to start mining.</Label>
        <Label Name="balanceLbl" Foreground="{StaticResource MinerGreen}" HorizontalAlignment="Center"></Label>
    </StackPanel>
</Page>
